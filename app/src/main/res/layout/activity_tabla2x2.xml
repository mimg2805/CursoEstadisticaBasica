<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Tabla2x2">

    <TextView
        android:id="@+id/activity_tabla2x2_tv_add_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:text="@string/add_data_2x2"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activity_tabla2x2_tl_tabla2x2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/activity_tabla2x2_tl_tabla2x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/activity_tabla2x2_tv_a1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/A1"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/activity_tabla2x2_tv_a2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/A2"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/activity_tabla2x2_tv_row_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/row_total"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_tabla2x2_tv_b1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/B1"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_a1b1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:ems="10"
                android:inputType="number"
                android:nextFocusDown="@+id/activity_tabla2x2_et_a2b1"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_a2b1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:ems="10"
                android:inputType="number"
                android:nextFocusDown="@+id/activity_tabla2x2_et_a1b2"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_row_total_1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/activity_tabla2x2_tv_b2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/B2"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_a1b2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:ems="10"
                android:inputType="number"
                android:nextFocusDown="@+id/activity_tabla2x2_et_a2b2"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_a2b2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textColor="@android:color/black" />
            <!-- android:nextFocusDown="@+id/activity_tabla2x2_et_a1b1"-->

            <EditText
                android:id="@+id/activity_tabla2x2_et_row_total_2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@android:color/black" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_tabla2x2_tv_column_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="@string/column_total"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_column_total_1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_column_total_2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/activity_tabla2x2_et_total"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@android:drawable/edit_text"
                android:clickable="false"
                android:ems="10"
                android:focusable="false"
                android:inputType="number"
                android:textColor="@android:color/black" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/activity_tabla2x2_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/clear"
        app:layout_constraintEnd_toStartOf="@+id/activity_tabla2x2_btn_calc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_tabla2x2_tl_tabla2x2" />

    <Button
        android:id="@+id/activity_tabla2x2_btn_calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/calc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_tabla2x2_btn_clear"
        app:layout_constraintTop_toBottomOf="@+id/activity_tabla2x2_tl_tabla2x2" />

    <FrameLayout
        android:id="@+id/activity_tabla2x2_fl_ads_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>