<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalcMedidasResumenVariableCuantitativa">

    <TextView
            android:text="Introduzca los datos, separados por espacios:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/numsLbl" android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="@android:color/black" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/numsTxt"/>
    <TextView
            android:text="Máximo ="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxLbl" android:textSize="18sp"
            android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/maxTxt"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numsTxt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/crt3Lbl"/>
    <TextView
            android:text="Cuartil 3 ="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crt3Lbl" android:textSize="18sp"
            android:textColor="@android:color/black" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/maxLbl" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/medianaLbl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/crt3Txt" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Mediana ="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medianaLbl" android:textSize="18sp"
            android:textColor="@android:color/black" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/crt3Lbl" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/crt1Lbl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/medianaTxt" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Cuartil 1 ="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crt1Lbl" android:textSize="18sp"
            android:textColor="@android:color/black" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/medianaLbl" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/minLbl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/crt1Txt" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="Mínimo ="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minLbl" android:textSize="18sp"
            android:textColor="@android:color/black" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/crt1Lbl" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mediaLbl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/minTxt" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <TextView
            android:text="@string/xbar_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediaLbl" android:textSize="18sp"
            android:textColor="@android:color/black" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minLbl" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/destLbl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toStartOf="@+id/mediaTxt" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"/>
    <TextView
            android:text="@string/s_equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/destLbl" android:textSize="18sp"
            android:textColor="@android:color/black" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toStartOf="@+id/destTxt" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mediaLbl"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text|textMultiLine|textImeMultiLine|number|numberDecimal"
            android:ems="10"
            android:id="@+id/numsTxt" android:imeOptions="actionDone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numsLbl" android:singleLine="false"
            android:background="@drawable/round_edit_text"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/maxTxt"
            android:text="27 13 18 52 4 8 17 3 45 33 28 11 25"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/maxTxt"
            android:background="@drawable/round_edit_text" android:clickable="false" android:cursorVisible="false"
            android:focusableInTouchMode="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/numsTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="14dp" android:layout_marginRight="14dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/crt3Txt" app:layout_constraintStart_toEndOf="@+id/maxLbl"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:singleLine="true"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/crt3Txt"
            android:background="@drawable/round_edit_text" android:clickable="false" android:cursorVisible="false"
            android:focusableInTouchMode="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/maxTxt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/medianaTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/crt3Lbl" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:singleLine="true"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/medianaTxt"
            android:background="@drawable/round_edit_text" android:clickable="false" android:cursorVisible="false"
            android:focusableInTouchMode="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/crt3Txt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/crt1Txt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/medianaLbl" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:singleLine="true"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/crt1Txt"
            android:background="@drawable/round_edit_text" android:clickable="false" android:cursorVisible="false"
            android:focusableInTouchMode="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/medianaTxt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/minTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/crt1Lbl" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:singleLine="true"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/minTxt"
            android:background="@drawable/round_edit_text" android:clickable="false" android:cursorVisible="false"
            android:focusableInTouchMode="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/crt1Txt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mediaTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp"
            app:layout_constraintStart_toEndOf="@+id/minLbl" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:singleLine="true"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/mediaTxt"
            android:background="@drawable/round_edit_text" android:clickable="false" android:cursorVisible="false"
            android:focusableInTouchMode="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minTxt" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/destTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/mediaLbl" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:singleLine="true"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/destTxt"
            android:background="@drawable/round_edit_text" android:clickable="false" android:cursorVisible="false"
            android:focusableInTouchMode="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mediaTxt" android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/destLbl" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:singleLine="true"/>
    <Button
            android:text="@string/limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLimpiar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="clear"/>
</androidx.constraintlayout.widget.ConstraintLayout>