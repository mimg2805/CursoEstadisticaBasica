<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalcDescriptivaVariableCualitativa">

    <TextView
            android:text="Introduzca los datos, separados por espacios:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dataLbl" android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textColor="@android:color/black" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/dataTxt"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/dataTxt" android:imeOptions="actionDone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dataLbl" android:singleLine="false"
            android:background="@drawable/round_edit_text"
            android:layout_marginBottom="16dp"
            android:text="M F F M M M M F F F" android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/table"/>
    <Button
            android:text="@string/limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLimpiar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="clear" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/table"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dataTxt" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btnLimpiar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:id="@+id/table">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center">
            <TextView
                    android:text="DistribuciÃ³n de Frecuencias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tableTitleTxt" android:textSize="18sp"
                    android:textColor="@android:color/black"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="-----------------------------------------------------------------------"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/lineTxt1" android:textColor="@android:color/black"
                    android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="0dp" android:layout_height="wrap_content"
        >
            <TextView
                    android:text="Variable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tableVarTxt" android:textSize="16sp"
                    android:textColor="@android:color/black" android:layout_weight="2"/>
            <TextView
                    android:text="No."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tableNumTxt" android:textSize="16sp"
                    android:textColor="@android:color/black" android:layout_weight="1"/>
            <TextView
                    android:text="%"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tablePorcTxt" android:textSize="16sp"
                    android:textColor="@android:color/black" android:layout_weight="1"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="-----------------------------------------------------------------------"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/lineTxt2" android:textColor="@android:color/black"
                    android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>